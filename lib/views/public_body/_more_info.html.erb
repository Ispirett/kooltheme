<div class="shadow-lg p-4 rounded-lg">


<h2><%= _('More about this authority')%></h2>

<% if !public_body.calculated_home_page.nil? %>
  <%= link_to _('Home page of authority'), public_body.calculated_home_page, class:"pt-4" %><br>
<% end %>

<% if !public_body.publication_scheme.blank? %>
  <%= link_to _('Publication scheme'), public_body.publication_scheme , class:"pt-4"%><br>
<% end %>

<% unless public_body.disclosure_log.blank? %>
  <%= link_to _('Disclosure log'), public_body.disclosure_log, class:"pt-4" %><br>
<% end %>

<%= link_to _('View FOI email address'), view_public_body_email_path(public_body.url_name), class:"pt-4" %><br>

<%= link_to _("Ask us to update FOI email"), new_change_request_body_path(:body => public_body.url_name), class:"pt-4" %><br>
</div>