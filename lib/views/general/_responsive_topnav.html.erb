<div id="topnav" class="topnav <%= @in_pro_area ? 'topnav--pro' : '' %>">
  <ul id="navigation" class="navigation flex justify-around items-center" role="navigation">
    <li class="mr-4"><%= link_to '', frontpage_path, :id => 'logo', :class => 'site-title__logo' %></li>

    <% if can?(:access, :alaveteli_pro) %>
      <%= render :partial => 'alaveteli_pro/general/nav_items' %>
    <% else %>
      <%= render :partial => 'general/nav_items' %>
    <% end %>

    <li>
      <% unless @user %>
        <%= link_to _("Sign in or sign up"), signin_path(:r => request.fullpath), :class => "sign_in_link "  %>
      <% end  %>
    </li>


  </ul>
</div>
